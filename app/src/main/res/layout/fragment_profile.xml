<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/White"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_default_icon"
        app:border_color="@color/White"
        app:border_width="5dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp">
        <View
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/done_bar"></View>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="credit_balance"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:textAlignment="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/progress_bar_container"></View>

    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:columnCount="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/blue_circle">
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/stats_orders__icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="count_orders"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/green_circle">
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/stats_registered__icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="count_orders"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registered"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/yellow_circle">
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/stats_visits__icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="count_orders"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visits"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/red_circle">
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/stats_missed__icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="count_orders"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missed"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </GridLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="THIS WEEK"
        android:background="@drawable/default_button"
        android:layout_gravity="center"
        android:textColor="@color/White"
        />
</LinearLayout>